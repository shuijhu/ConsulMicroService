{
  "ReRoutes": [
    {
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/user/{url}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "ServiceName": "UserService",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "UserServiceDiscovery": true,
      "AuthenticationOption": {
        "AuthenticationProviderKey": "UserKey",
        "AllowedScoped": [ "UserAPI" ]
      }
    },
    {
      "DownstreamPathTemplate": "/{url}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/project/{url}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "ServiceName": "ProjectService",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "UserServiceDiscovery": true,
      "AuthenticationOption": {
        "AuthenticationProviderKey": "ProjectKey",
        "AllowedScoped": [ "ProjectAPI" ]
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://api.mybusiness.com",
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8500
    }
  }

}
